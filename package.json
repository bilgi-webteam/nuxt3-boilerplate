{
  "name": "nuxt3-boilerplate",
  "version": "1.0.0",
  "private": true,
  "config": {
    "server": "deployer@172.16.0.43",
    "path": "/home/deployer/sites/test.bilgi.edu.tr/"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:prettier\"",
    "dev:server": "nuxt dev --host",
    "dev:prettier": "onchange \"!(node_modules|build)/**/*.{js,jsx,ts,tsx,vue}\" -- prettier --write {{changed}}",
    "generate": "nuxt generate --fail-on-error",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "lintfix": "yarn lint:js --fix",
    "deldist:local": "rm -rf dist/",
    "deldist:server": "ssh $npm_package_config_server rm -rf $npm_package_config_path/*",
    "copydist:server": "scp -r dist/. $npm_package_config_server:$npm_package_config_path",
    "deploy": "yarn deldist:local && nuxt generate && yarn deldist:server && yarn copydist:server"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.21",
    "@heroicons/vue": "^2.1.3",
    "nuxt": "^3.11.2",
    "nuxt-gtag": "^2.0.5",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@nuxtjs/color-mode": "^3.4.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/i18n": "^8.3.0",
    "@unocss/reset": "latest",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "floating-vue": "latest",
    "onchange": "^7.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "rollup": "^4.16.4",
    "tailwindcss": "^3.4.3",
    "unocss": "latest",
    "vite": "latest"
  }
}
